<%= form_for @departamento do |f| %>
  <div class="box-body">
      <div class="row">
      <div class="col-lg-12">
        <div class="form-group">
          <label>Nome: </label>
          <%= f.text_field :nome, class: "form-control" %>
        </div>
      </div>
    </div>
  </div>
  <div class="box-footer">
    <div class="row pull-right">
      <div class="col-lg-12 ">
        <%= f.submit value: texto_da_acao, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
