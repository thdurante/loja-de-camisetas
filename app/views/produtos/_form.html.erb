<%= form_for @produto do |f| %>
  <div class="box-body">
      <div class="row">
      <div class="col-lg-12">
          <div class="row">
            <div class="col-lg-6">
              <div class="form-group">
                <label>Nome: </label>
                <%= f.text_field :nome, class: "form-control" %>
              </div>
            </div>
            <div class="col-lg-2">
              <div class="form-group">
                <label>Quantidade: </label>
                <%= f.number_field :quantidade, step: 1, min: 1, class: "form-control" %>
              </div>
            </div>
            <div class="col-lg-2">
              <label>Preço: </label>
              <%= f.number_field :preco, class: "form-control" %>
            </div>
            <div class="col-lg-2">
              <label>Departamento: </label>
              <%= f.collection_select :departamento_id, @departamentos, :id, :nome, {}, class: "form-control" %>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-12">
              <label>Descrição: </label>
              <%= f.text_area :descricao, rows: 4, class: "form-control" %>
            </div>
          </div>
      </div>
    </div>
  </div>
  <div class="box-footer">
    <div class="row pull-right">
      <div class="col-lg-12 ">
        <%= f.submit value: "Salvar", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
