<!-- Arquivo nomeado com _ para identificar um partial -->
<tr>
	<td><%= produto.id %></td>
	<td><%= produto.nome %></td>
	<td><%= produto.descricao %></td>
	<td><%= produto.preco %></td>
	<td><%= produto.quantidade %></td>
	<td><%= produto.departamento.nome %></td>
	<td>
		<div class="btn-group">
			<%= button_to "Remover", produto, 
				method: "delete", 
				class: "btn btn-danger btn-xs",
				data: {confirm: "Tem certeza que deseja remover o produto: '#{produto.nome}'?"} %>

			<%= button_to "Editar", edit_produto_path(produto), 
				method: :get, 
				class: "btn btn-primary btn-xs" %>
		</div>
	</td>
</tr>
